<%= form_with(model: @user) do |form| %>
  <% if flash[:error].present? %>
    <div style="color: red">
      <h2><%= pluralize(1, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <li><%= flash[:error] %></li>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :age, style: "display: block" %>
    <%= form.number_field :age %>
  </div>

  <div>
    <%= form.label :kind, style: "display: block" %>
    <%= form.select :kind, User.kinds.keys.map{ |key| [key.humanize, key] } %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
